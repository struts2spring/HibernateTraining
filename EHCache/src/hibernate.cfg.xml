<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">org.h2.Driver</property>
		<property name="hibernate.connection.url">jdbc:h2:tcp://localhost/~/test</property>
		<property name="hibernate.connection.username">sa</property>
		<property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.use_sql_comments">true</property>
		<property name="hibernate.format_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">create</property>

		<property name="hibernate.cache.use_second_level_cache">true</property>
		<property name="hibernate.cache.provider_class">org.hibernate.cache.EhCacheProvider</property>
		
		<property name="hibernate.generate_statistics">true</property>

		<mapping class="com.example.training.entity.Country" />
		<mapping class="com.example.training.entity.Employee" />
		<mapping class="com.example.training.entity.Airport" />
		<mapping class="com.example.training.entity.Country" />
		<mapping class="com.example.training.entity.Employee" />
		<mapping class="com.example.training.entity.EmployeeSpeaksLanguage" />
		<mapping class="com.example.training.entity.EmployeeSpeaksLanguageId" />
		<mapping class="com.example.training.entity.SpokenLanguage" />
	</session-factory>
</hibernate-configuration>
